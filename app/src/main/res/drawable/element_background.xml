<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Left-->
    <item>
        <shape android:shape="oval">
            <size android:width="42dp" />
            <gradient
                android:type="radial"
                android:endColor="#00000000"
                android:startColor="#22BDBDBD"
                android:gradientRadius="21dp"
                android:centerX="0.2"/>
            <corners android:radius="21dp"/>
        </shape>
    </item>
    <!--Right-->
    <item
        android:right="5dp"
        android:bottom="20dp"
        >
        <shape android:shape="oval">
            <size android:width="20dp"
                android:height="20dp"/>
            <gradient
                android:type="radial"
                android:endColor="@color/colorAccent"
                android:startColor="#22BDBDBD"
                android:gradientRadius="21dp"
                android:centerX="0.8"/>
            <corners android:radius="21dp"/>
        </shape>
    </item>
    <!--Top-->

    <item
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSelected"/>
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/colorImageBound"/>
        </shape>
    </item>
</layer-list>