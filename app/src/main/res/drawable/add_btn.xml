<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient android:type="linear" android:startColor="#3e97eb" android:endColor="#b34eed" android:angle="315" />
        </shape>
    </item>
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"
        >
        <bitmap android:src="@drawable/add_icon"
            android:mipMap="true"
            />
    </item>
</layer-list>